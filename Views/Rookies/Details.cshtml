@model MySecondMVC.Models.Person
@{
    ViewData["Title"] = "Person Details";
}

<h2>Details for @Model.FullName</h2>

<ul>
    <li>Gender: @Model.Gender</li>
    <li>Age: @Model.Age</li>
    <li>Date of Birth: @Model.DateOfBirth</li>
    <li>Phone: @Model.PhoneNumber</li>
    <li>Birth Place: @Model.BirthPlace</li>
    <li>Graduated: @(Model.IsGraduated ? "Yes" : "No")</li>
</ul>

<div>
    <a href="@Url.Action("Delete", new { id = Model.Id })">Delete</a> |
    <a href="@Url.Action("Index")">Back to List</a>
</div>