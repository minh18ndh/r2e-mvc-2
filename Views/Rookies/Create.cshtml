@model MySecondMVC.Models.Person
@{
    ViewData["Title"] = "Create Person";
}

<h2>Create New Person</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>First Name:</label>
        <input asp-for="FirstName" required />
    </div>
    <div>
        <label>Last Name:</label>
        <input asp-for="LastName" required />
    </div>
    <div>
        <label>Gender:</label>
        <input asp-for="Gender" required />
    </div>
    <div>
        <label>Date of Birth:</label>
        <input asp-for="DateOfBirth" type="date" required />
    </div>
    <div>
        <label>Phone Number:</label>
        <input asp-for="PhoneNumber" required />
    </div>
    <div>
        <label>Birth Place:</label>
        <input asp-for="BirthPlace" required />
    </div>
    <div>
        <label>Is Graduated:</label>
        <input asp-for="IsGraduated" type="checkbox" />
    </div>
    <button type="submit">Create</button>
</form>
<p><a href="@Url.Action("Index")">Back to List</a></p>